@model AirportAutomationWeb.Models.Pilot.PilotCreateViewModel;

@{
	ViewData["Title"] = "View";
}
@{
	ViewBag.Title = "Create Pilot";
}

@Html.AntiForgeryToken()

<h4>Create Pilot</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="CreatePilot" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group pb-3">
				<label asp-for="FirstName" class="control-label"></label>
				<input asp-for="FirstName" class="form-control" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
			<div class="form-group pb-3">
				<label asp-for="LastName" class="control-label"></label>
				<input asp-for="LastName" class="form-control" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
			<div class="form-group pb-3">
				<label asp-for="UPRN" class="control-label"></label>
				<input asp-for="UPRN" class="form-control" />
				<span asp-validation-for="UPRN" class="text-danger"></span>
			</div>
			<div class="form-group pb-4">
				<label asp-for="FlyingHours" class="control-label"></label>
				<input asp-for="FlyingHours" class="form-control" />
				<span asp-validation-for="FlyingHours" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-success" />
			</div>
		</form>
	</div>
</div>

@if (TempData["AlertMessage"] != null)
{
	@await Html.PartialAsync("_AlertPartial", TempData)
}

@await Html.PartialAsync("_BackToListPartial")

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
