@model AirportAutomationWeb.Models.Flight.FlightViewModel;

@{
	ViewData["Title"] = "View";
}
@{
	ViewBag.Title = "Flight Details";
}

@Html.AntiForgeryToken()

<div>
	<h4>Flight Details</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Id)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Id)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DepartureDate)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.DepartureDate)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DepartureTime)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.DepartureTime)
		</dd>
	</dl>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Airline)
		</dt>
		<dd class="col-sm-10">
			&nbsp;
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Airline.Id)
		</dt>
		<dd class="col-sm-10">
			@Html.ActionLink(Model.Airline.Id.ToString(), "Details", "Airline",
			new { id = Model.Airline.Id },
			new { target = "_blank", @class = "btn btn-info", data_bs_toggle = "tooltip", data_bs_placement = "right", data_bs_title = "Click for more details." }
			)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Airline.Name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Airline.Name)
		</dd>
	</dl>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Destination)
		</dt>
		<dd class="col-sm-10">
			&nbsp;
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Destination.Id)
		</dt>
		<dd class="col-sm-10">
			@Html.ActionLink(Model.Destination.Id.ToString(), "Details", "Destination",
			new { id = Model.Destination.Id },
			new { target = "_blank", @class = "btn btn-info", data_bs_toggle = "tooltip", data_bs_placement = "right", data_bs_title = "Click for more details." }
			)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Destination.City)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Destination.City)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Destination.Airport)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Destination.Airport)
		</dd>
	</dl>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Pilot)
		</dt>
		<dd class="col-sm-10">
			&nbsp;
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Pilot.Id)
		</dt>
		<dd class="col-sm-10">
			@Html.ActionLink(Model.Pilot.Id.ToString(), "Details", "Pilot",
			new { id = Model.Pilot.Id },
			new { target = "_blank", @class = "btn btn-info", data_bs_toggle = "tooltip", data_bs_placement = "right", data_bs_title = "Click for more details." }
			)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Pilot.FirstName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Pilot.FirstName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Pilot.LastName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Pilot.LastName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Pilot.UPRN)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Pilot.UPRN)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Pilot.FlyingHours)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Pilot.FlyingHours)
		</dd>
	</dl>
</div>
<hr />
@if (TempData["AlertMessage"] != null)
{
	@await Html.PartialAsync("_AlertPartial", TempData)
}
<div>
	@await Html.PartialAsync("_EditButtons", Model)
</div>