@model AirportAutomation.Web.Models.Destination.DestinationViewModel;
@using System.Net;

@{
	ViewBag.Title = "Destination Details";
}

<div>
	<h4>Destination Details</h4>
	<div class="container">
		<div class="row">
			<hr />
			<div class="col-md-6">
				<dl class="row">
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.Id)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Id)
					</dd>
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.City)
					</dt>
					<dd class="col-sm-10 link-primary clickable-row" onclick="openMap('@Model.City')">
						@Html.DisplayFor(model => model.City)
					</dd>
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.Airport)
					</dt>
					<dd class="col-sm-10 link-primary clickable-row" onclick="openMap('@Model.Airport')">
						@Html.DisplayFor(model => model.Airport)
					</dd>
				</dl>
			</div>
			<div class="col-md-6">
				<iframe src="https://maps.google.com/maps?q=@WebUtility.UrlEncode(Model.City + ' ' + Model.Airport)&output=embed"
						style="width: 100%; height: 320px; border: 0;"
						allowfullscreen=""
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"
						title="Google Map">
				</iframe>
			</div>
		</div>
	</div>
</div>
@if (TempData["AlertMessage"] != null)
{
	@await Html.PartialAsync("_AlertPartial", TempData)
}
@if (ViewBag.ApiUserRole != "User")
{
	<div>
		@await Html.PartialAsync("_EditButtons", Model)
	</div>
}
@section Scripts {
	<script src="~/js/OpenHelper.js"></script>
}
