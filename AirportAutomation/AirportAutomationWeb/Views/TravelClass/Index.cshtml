@{
	ViewBag.Title = "Travel Class";
	string typeName = "TravelClass";
}

@await Html.PartialAsync("Index/_FormContainer")

@section Scripts {
	<script>
		$(document).ready(function () {
			var typeName = '@typeName';
			var fetchUrl = '@Url.Action("GetTravelClasses", typeName, new { area = "", name = "" })';

			$('#searchButton').on('click', function () {
				fetchData(fetchUrl, typeName, 1);
			});

			fetchData(fetchUrl, typeName, 1);

			$(document).on('click', '.page-link', function (e) {
				e.preventDefault();
				var page = $(this).data('page');
				if (page) {
					fetchData(fetchUrl, typeName, page);
				}
			});
		});
	</script>
	<script src="~/js/GetHelper.js"></script>
}

