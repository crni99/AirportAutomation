<nav aria-label="Page navigation">
	<ul class="pagination pagination-container pagination-container-absolute">
		<li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
			<a href="@Url.Action("Index", new { page = 1 })" class="page-link">First Page</a>
		</li>
		<li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
			<a href="@Url.Action("Index", new { page = Model.PageNumber - 1 })" class="page-link">Previous</a>
		</li>
		<li class="page-item @(Model.PageNumber == Model.LastPage ? "disabled" : "")">
			<a href="@Url.Action("Index", new { page = Model.PageNumber + 1 })" class="page-link">Next</a>
		</li>
		<li class="page-item @(Model.PageNumber == Model.LastPage ? "disabled" : "")">
			<a href="@Url.Action("Index", new { page = Model.LastPage })" class="page-link">Last Page</a>
		</li>
	</ul>
</nav>